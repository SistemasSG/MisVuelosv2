<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisVuelosv2.View.ReservarPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="20" BackgroundColor="WhiteSmoke">
                <Label Text="Datos de la reserva" TextColor="Black" FontSize="15" Margin="5,0,0,15" />
                <Entry x:Name="nombre" Placeholder="Nombre" FontSize="12" Margin="5,0,0,0"></Entry>
                <Entry x:Name="cedula" Placeholder="Cedula" Keyboard="Numeric" FontSize="12" Margin="5,0,0,0" ></Entry>
                <Entry x:Name="edad" Placeholder="Edad" Keyboard="Numeric" FontSize="12" Margin="5,0,0,0"></Entry>
                <Entry x:Name="asientos" Placeholder="Cantidad de asientos" Keyboard="Numeric" FontSize="12" Margin="5,0,0,0"></Entry>

                <Button x:Name="reservar" Clicked="reservar_Clicked" Text="Reservar" TextColor="White" FontSize="15" BackgroundColor="Orange" Margin="5,10,0,0" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>